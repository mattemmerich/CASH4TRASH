<!DOCTYPE html>
<html>
<head>
	<script src="http://d3js.org/d3.v3.min.js"></script>
  <title>Cash4Trash</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="/assets/favicon.ico" rel="shortcut icon" type="image/x-icon" />

</head>
<body>


<% @user = User.new%>

<div id="nav">
	<h3 id="slide">CASH4TRASH</h3>
	<ul>
		<%if current_user%>
			<li><%= link_to "LOGOUT", logout_path %></li>
			<li id="edit_link" class="nav_link">EDIT</li>
		<%end%>
		<%if !current_user%>
		  <li id="sign_link" class="nav_link">SIGN UP</li>
		  <li id="log_link" class="nav_link">LOGIN</li>
		<%end%>
		<li><%= link_to "HOME", index_path, :class => "nav_link" %></li>
	</ul>
</div>

<div id="shade">
	<div class="neon"><h3>TRASH4CASH</h3></div>
</div>

<div id="sign">
			<div class="p"><p>X</p></div>
		<%= form_for @user do |f|%>
			<%=f.text_field :f_name, placeholder:"First Name"  %>
			<br>
			<br>
			<%=f.text_field :l_name, placeholder:"Last Name" %>
			<br>
			<br>
			<%=f.text_field :b_name, placeholder:"Buisness Name" %>
			<br>
			<br>
			<%=f.email_field :email, placeholder:"Email" %>
			<br>
			<br>
			<%=f.password_field :password, placeholder:"Password" %>
			<br>
			<br>
			<%= f.password_field :password_confirmation, placeholder:"Confirm Password" %>
			<br>
			<br>
			<%=f.submit :SIGN_UP %>
			<br>
			<br>

	<%end%>
</div>

<div id="log">
		<div class ="p" ><p>X</p></div>
	<%= form_tag('/login', method: "post") do  %>
		<%=text_field_tag :email, nil, placeholder:"Email" %>
		<br>
		<br>
		<%=password_field_tag :password, nil, placeholder:"Password" %>
		<br>
		<br>
		<%=submit_tag :LOGIN %>
		<br>
		<br>
	<%end%>
</div>









<%= yield %>

<div id = "footer">
	<div class="img">
			<%= image_tag "05.png" %>
			<!-- <img src="/assets/05.png"></img> -->
		</div>
		<h3 class="tag">DATA COLLECTION AND MARKET PRICES</h3>
</div>


</body>
